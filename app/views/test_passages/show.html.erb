<h3>Выполнение теста <%= @test_passage.test.title %></h3>

<b><%= @test_passage.current_question.body %></b>

<%= form_with url: test_passage_path(@test_passage), local: true, method: :put do |form| %>
  <%= form.collection_check_boxes :answer_ids, @test_passage.current_question.answers, :id, :body,
                                  include_hidden: false do |a| %>
    <p>
      <%= a.check_box id: "answer_id_#{a.object.id}" %>
      <%= a.label %>
    </p>
  <% end %>

  <p><%= form.submit 'Далее' %></p>
<% end %>
