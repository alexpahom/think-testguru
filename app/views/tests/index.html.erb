<h3>Список тестов</h3>

<table>
  <tr>
    <th>Название</th>
    <th>Кол-во вопросов</th>
    <th colspan="3">Действия</th>
  </tr>
  <% @tests.each do |test| %>
    <tr>
      <td><%= test.title %></td>
      <td><%= test.questions.count %></td>
      <td><%= link_to 'Просмотр', test_path(test) %></td>
      <td><%= link_to 'Редактировать', edit_test_path(test) %></td>
      <td><%= link_to 'Удалить', test_path(test), method: :delete, data: { confirm: 'Удалить вопрос?' } %></td>
    </tr>
  <% end %>
  <tr>
    <td><%= link_to 'Создать', new_test_path %></td>
  </tr>
</table>
