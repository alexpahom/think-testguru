<h3>Список тестов</h3>

<table>
  <tr>
    <th>Название</th>
    <th>Кол-во вопросов</th>
  </tr>
  <% @tests.each do |test| %>
    <tr>
      <td><%= test.title %></td>
      <td><%= test.questions.count %></td>
      <td><%= link_to 'Просмотр', test_path(test) %></td>
    </tr>
  <% end %>
</table>
