<%= form_with model: [:admin, @badge], local: true do |f| %>
  <div class="mb-3">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :description, class: 'form-label' %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>

  <div class="mb-3 form-check">
    <%= f.collection_radio_buttons :rule_template_id, RuleTemplate.all, :id, :text do |b| %>
      <%= b.label(class: 'form-check-label mx-4 d-block') { b.radio_button(class: 'form-check-input') + b.text } %>
    <% end %>
  </div>

  <div class="mb-3 overflow-y-auto form-control" id="images-container">
    <%= f.collection_radio_buttons :badge_image_id, BadgeImage.all, :id, :url do |b| %>
      <%= b.label do %>
        <%= b.radio_button(class: 'invisible') +
              (content_tag :div, image_tag(b.object.url, size: '50x50'),
                           class: 'image-cell d-flex justify-content-center align-items-center') %>

      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.submit 'Save', class: 'btn btn-primary btn-lg' %>
    <%= link_to 'Back', admin_badges_path, class: 'btn btn-lg' %>
  </div>
<% end %>

