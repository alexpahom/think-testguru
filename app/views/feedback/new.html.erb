<div class="row justify-content-center">
  <h3><%= t('.create_feedback_header')%></h3>
  <div class="col-md-7">
    <%= form_with url: feedback_index_path, method: :post do |f| %>

      <% unless current_user %>
        <div class="mb-3">
          <%= f.label :email, class: 'form-label' %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
      <% end %>

      <div class="mb-3">
        <%= f.label t('.feedback_text_label'), class: 'form-label' %>
        <%= f.text_area :body, rows: 7, cols: 60, class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%= f.submit nil, class: 'btn btn-primary btn-lg'%>
        <%= link_to root_path, class: 'btn btn-lg' do %>
          <%= content_tag :i, nil, class: 'bi bi-arrow-return-left' %>
          <%= t('general.back') %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
