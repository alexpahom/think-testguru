<h3><%= t('.in_progress_header', title: @test_passage.test.title) %></h3>

<b><%= @test_passage.current_question.body %></b>

<%= render 'shared/errors', resource: @test_passage %>

<p class="progress">
  <%= t('.questions_progress', current: current_question_number, total: total_questions_count) %>
</p>

<%= form_with url: test_passage_path(@test_passage), local: true, method: :put do |form| %>
  <%= form.collection_check_boxes :answer_ids, @test_passage.current_question.answers, :id, :body do |a| %>
    <p>
      <%= a.check_box id: "answer_id_#{a.object.id}" %>
      <%= a.label %>
    </p>
  <% end %>

  <p><%= link_to t('.gist_question'), gist_test_passage_path(@test_passage), method: :post %></p>
  <p><%= form.submit t('.next') %></p>
<% end %>
