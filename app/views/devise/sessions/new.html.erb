<div class="row justify-content-center">
  <div class="col col-md-4">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'text-center' }) do |f| %>
      <div class="form-group">
        <%= image_tag 'logo.png' %>
        <h2><%= t('general.login') %></h2>
        <p class="form-floating">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control',
                            placeholder: t('.email_address') %>
          <%= f.label :email %>
        </p>

        <p class="form-floating">
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control',
                               placeholder: t('.password') %>
          <%= f.label :password, t('.password') %>
        </p>

        <% if devise_mapping.rememberable? %>
          <div class="form-check mb-3">
            <%= f.label :remember_me, class: 'form-check-label' do %>
              <%= f.check_box :remember_me, class: 'form-check-input' %>
              <%= t('.remember_me')%>
            <% end %>
          </div>
        <% end %>

        <div class="actions d-grid">
          <%= f.submit t('general.login'), class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
